// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "features": {
    "inline_completion_provider": "none"
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "show_inline_completions": true,
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Frapp√©",
    "dark": "One Dark"
  },
  "tab_size": 2,
  "cursor_blink": true,
  "buffer_font_family": "JetBrainsMonoNFM-Medium",
  "terminal": {
    "font_family": "JetBrainsMonoNFM-Medium"
  },
  "preferred_line_length": 80,
  "buffer_line_height": "comfortable",
  "ui_font_family": "JetBrainsMonoNFM-Medium",
  "formatter": "prettier",
  "relative_line_numbers": true,
  "git": {
    "enabled": true,
    "autoFetch": true,
    "autoFetchInterval": 300,
    "autoFetchOnFocus": true,
    "autoFetchOnWindowChange": true,
    "autoFetchOnBuild": true,
    "git_status": true,
    "autoFetchOnBuildEvents": ["build", "run", "debug"],
    "autoFetchOnBuildEventsDelay": 1500,
    "autoFetchOnBuildDelay": 1500,
    "git_gutter": "tracked_files"
  },

  "auto_install_extensions": {
    "java": true,
    "gdscript": true,
    "java-eclipse-jdtls": true,
    "catppuccin": true,
    "snippets": true
  }
}
